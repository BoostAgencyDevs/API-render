# Configuración de entorno para Boost Agency API
# Copia este archivo como .env y configura las variables según tu entorno

# Puerto del servidor (Render usa automáticamente PORT)
PORT=3000

# Entorno de ejecución
NODE_ENV=production

# Configuración de CORS (opcional)
CORS_ORIGIN=*

# Configuración de archivos (opcional)
UPLOAD_DIR=uploads
MAX_FILE_SIZE=10485760

# Configuración de base de datos (para futuras implementaciones)
# DATABASE_URL=postgresql://user:password@host:port/database
